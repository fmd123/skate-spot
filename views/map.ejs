  <body>
    <div id="map"></div>
    <script>

    var coordinants = [];

    (()=>{

    })();

    // console.log(coordinants)

    function initMap(latlng) {
      var myLatLng = {lat: 21, lng: -141};

      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 4,
        center: myLatLng
      })

    fetch('http://localhost:3000/spots')
    .then((res)=>res.json())
    .then((resjson)=>{
        for(var prop in resjson[0]) {
          var lat = resjson[0].lat;
          var lng = resjson[0].lon;
        }
        const coord = {lat: lat, lng: lng}
        coordinants.push(coord);
        console.log(coordinants)
        for(i=0; i<coordinants.length; i++) {
          console.log(typeof coordinants[i].lat)
          var parseLat = parseFloat(coordinants[i].lat)
          console.log(parseLat)
          var parseLng = parseFloat(coordinants[i].lng)
          console.log(parseLng)
          new google.maps.Marker({
          position: {lat: parseLat, lng: parseLng},
          map: map,
          title: 'Hello World!'
      })
    }
  })
}
